{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/example.json",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 75
    },
    "address": {
      "type": "string",
      "minLength": 1,
      "maxLength": 75
    },
    "email": {
      "type": "string",
      "minLength": 1,
      "maxLength": 75
    },
    "opening_hours": {
      "type": "string"
    },
    "phone_no": {
      "type": "string"
    }
  },
  "additionalProperties": false,
  "required": ["name", "opening_hours", "phone_no", "address", "email"]
}
