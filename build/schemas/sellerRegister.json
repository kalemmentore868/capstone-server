{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/example.json",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 75
        },
        "address": {
            "type": "string",
            "minLength": 1,
            "maxLength": 75
        },
        "opening_hours": {
            "type": "string"
        },
        "email": {
            "type": "string",
            "minLength": 5,
            "maxLength": 20
        },
        "password": {
            "type": "string",
            "minLength": 5,
            "maxLength": 20
        },
        "phone_no": {
            "type": "string"
        }
    },
    "additionalProperties": false,
    "required": [
        "name",
        "opening_hours",
        "email",
        "phone_no",
        "address",
        "password"
    ]
}
